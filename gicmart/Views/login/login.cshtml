<div class="panel panel-default" style="margin-right:250px;margin-left:250px">
    <div class="container" style="margin-left:100px;margin-top:20px">
       <div class="row" style="text-align:center;background-color:blue;width:400px;margin-left:0px;color:white"><h2><b>LOGIN</b></h2></div>
       <br />
       <form action="/action_page.php">
          <div class="form-group" style="width:400px">
            <label for="email">User ID:</label>
            <input type="email" class="form-control" id="email" placeholder="Enter email" name="email">
          </div>
          <div class="form-group"  style="width:400px">
           <label for="pwd">Password:</label>
           <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pwd">
          </div>
          <button type="submit" class="btn btn-default" style="margin-left:150px">Submit</button>
       </form>
    </div>
</div>


